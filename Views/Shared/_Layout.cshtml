@using Opuestos_por_el_Vertice.Models.Services.ViewModels.ViewEnvelopment
@model ViewKindViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.WebTitle - Opposites by the Vertex</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Opuestos_por_el_Vertice.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="navbar-container">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-black box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Opposites by the Vertex</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">About us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Search" asp-action="Events">Events</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Search" asp-action="News">News</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Search" asp-action="Artists">Artists</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Search" asp-action="Albums">Albums</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Search" asp-action="Genres">Genres</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="Index">Admin</a>
                        </li>
                    </ul>
                    <partial name="../Shared/_LoginPartial.cshtml" model="@Model.User" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main">
            <div class="row main">
                <div class="col-9">
                    <div class="row">
                        <div class="hero-container col">
                            <partial name="../Shared/_HeroPartial.cshtml" model="@Model" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="body-container col">
                            @RenderBody()
                        </div>
                    </div>
                </div>
                <div class="aside-container col-3">
                    <partial name="../Shared/_AsidePartial.cshtml" model="@Model"></partial>
                </div>
            </div>
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2023 - Opposites by the Vertex - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
